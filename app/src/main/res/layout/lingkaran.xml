<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lingkaran">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="MENGHITUNG LUAS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtDiameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:hint="Diameter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="diameter = jari-jari * 2"
        android:textAlignment="textStart"
        android:textColor="@color/teal_700"
        android:textSize="12dp"
        android:paddingEnd="2dp"
        android:paddingStart="22dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnHasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Luas"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:id="@+id/btnHasilKeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Keliling"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="HASIL LUAS ADALAH :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Hasil Luas"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="HASIL KELILING ADALAH :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hasilKeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Hasil Keliling"
        android:textSize="40dp"
        android:textStyle="bold" />

</LinearLayout>